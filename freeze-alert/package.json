{
  "name": "freeze-alert",
  "version": "1.0.0",
  "description": "SMS alerts when temperatures drop low enough to drip faucets",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 execute freeze-alert-db --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute freeze-alert-db --local --file=./schema.sql",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run weather.integration.test.ts",
    "test:unit": "vitest run --exclude weather.integration.test.ts",
    "test:output": "npx tsx test-forecast-output.ts",
    "test:verbose": "npx tsx test-comprehensive.ts"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "wrangler": "^3.95.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
